<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Appcolor"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Move My Home"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <ImageView

            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/next_btn"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/form_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/mymoveform"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:orientation="vertical"

            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Back to Details"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/form_inside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/hometype_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/hometype_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/movehome_home" />


                <TextView
                    android:id="@+id/hometype_edittext_hh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/noof_packing_title"
                    android:layout_toRightOf="@+id/noof_packing_title"
                    android:background="@null"
                    android:hint="Select Home Size"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:textColor="#7D7D7D"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/noof_packing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/hometype_edittext_hh"
                    android:layout_toEndOf="@+id/hometype_icon"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:paddingLeft="5dp"
                    android:text="Home Type"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_hometype"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="@drawable/rightarrow" />


            </RelativeLayout>

            <TextView
                android:id="@+id/rowline"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/arae_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/arae_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_area" />


                <EditText
                    android:id="@+id/arae_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/arae_text"
                    android:layout_toRightOf="@+id/arae_text"
                    android:background="@null"
                    android:hint="Area"
                    android:inputType="number"
                    android:paddingLeft="65dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:textColor="#7D7D7D"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/arae_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/arae_edittext"
                    android:layout_toRightOf="@+id/arae_icon"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:text="Area"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/icon_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/arae_edittext"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Sq.FT."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="10dp"

                    />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_date" />


                <TextView
                    android:id="@+id/date_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/date_text"
                    android:layout_toRightOf="@+id/date_text"
                    android:background="@null"
                    android:hint="Enter Date"
                    android:inputType="text"
                    android:paddingLeft="65dp"
                    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/date_edittext"
                    android:layout_toEndOf="@+id/date_icon"
                    android:layout_toRightOf="@+id/date_icon"
                    android:paddingLeft="5dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rightarrow" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_time" />


                <TextView
                    android:id="@+id/time_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/time_text"
                    android:layout_toRightOf="@+id/time_text"
                    android:background="@null"
                    android:hint="Select Time"
                    android:inputType="text"
                    android:paddingLeft="60dp"
                    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/time_edittext"
                    android:layout_toEndOf="@+id/time_icon"
                    android:layout_toRightOf="@+id/time_icon"
                    android:paddingLeft="5dp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/time_edittext"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rightarrow" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/movefrom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/movefrom_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_from" />


                <AutoCompleteTextView
                    android:id="@+id/movefrom_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/movefrom_icon"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/movefrom_text"
                    android:layout_toRightOf="@+id/movefrom_text"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="Move From"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#7D7D7D"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/movefrom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/movefrom_edittext"
                    android:layout_toEndOf="@+id/movefrom_icon"
                    android:layout_toRightOf="@+id/movefrom_icon"
                    android:paddingLeft="5dp"
                    android:text="Move From"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/moveto_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/moveto_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_to" />


                <AutoCompleteTextView
                    android:id="@+id/moveto_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/moveto_icon"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/moveto_text"
                    android:layout_toRightOf="@+id/moveto_text"
                    android:background="@null"
                    android:hint="Move To"
                    android:inputType="text"
                    android:paddingLeft="38dp"
                    android:singleLine="true"
                    android:textColor="#7D7D7D"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/moveto_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/moveto_edittext"
                    android:layout_toEndOf="@+id/moveto_icon"
                    android:layout_toRightOf="@+id/moveto_icon"
                    android:paddingLeft="5dp"
                    android:text="Move To"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/goodsdetail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/goodsdetail_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/movehome_to" />


                <AutoCompleteTextView
                    android:id="@+id/goodsdetail_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/goodsdetail_icon"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/good_text"
                    android:layout_toRightOf="@+id/good_text"
                    android:background="@null"
                    android:hint="Goods Details"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#7D7D7D"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/good_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/goodsdetail_edittext"
                    android:layout_toEndOf="@+id/goodsdetail_icon"
                    android:layout_toRightOf="@+id/goodsdetail_icon"
                    android:paddingLeft="5dp"
                    android:text="Goods Details"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/distance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAEBEC"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/distance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Distance : "
                    android:textColor="@color/black"
                    android:textSize="15dp"

                    />

                <TextView
                    android:id="@+id/distance_editetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/distance_text"
                    android:layout_toRightOf="@+id/distance_text"
                    android:text="0:00"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/funcinalty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/form_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.50"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"

            android:paddingTop="10dp"
            android:text="Show on Map"

            android:textColor="@color/Appcolor" />


        <TextView
            android:id="@+id/getquote"
            style="@style/submitbuttonstyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.50"
            android:background="@drawable/round_mainbutton"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Get Quote" />


    </LinearLayout>

    <View
        android:id="@+id/shade_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshadow" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>



      
      
   