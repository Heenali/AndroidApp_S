<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:layout_toRightOf="@+id/hometype_icon"
            android:layout_toEndOf="@+id/hometype_icon"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/comment_layout"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textColor="@color/black"
            android:background="@drawable/round_edittext"
            android:textSize="15dp"
            android:drawableRight="@mipmap/down_triangle"
            android:hint="Shipping Date"
            android:gravity="start"
            android:focusable="false"

            android:singleLine="true"
            android:id="@+id/date_edittext"
            android:layout_weight="0.15" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/total_layouts"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"

            android:layout_toRightOf="@+id/hometype_icon"
            android:layout_toEndOf="@+id/hometype_icon"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/time_layout"

        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textColor="@color/black"
            android:background="@drawable/round_edittext"
            android:textSize="15dp"
            android:drawableRight="@mipmap/down_triangle"
            android:hint="Shipping Time"
            android:gravity="start"
            android:focusable="false"
            android:singleLine="true"
            android:id="@+id/time_edittext"
            android:layout_weight="0.15" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/submit_layout"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"
            android:text="Save chnages"
            android:layout_margin="5dp"
            style="@style/submitbuttonstyle"
            android:gravity="center"
            android:background="@drawable/round_mainbutton"
            android:layout_weight="0.50"/>
        <TextView
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent"
            android:text="Close"
            android:layout_margin="5dp"
            style="@style/submitbuttonstyle"
            android:gravity="center"
            android:background="@drawable/round_mainbutton_black"
            android:layout_weight="0.50"/>
    </LinearLayout>
</LinearLayout>
