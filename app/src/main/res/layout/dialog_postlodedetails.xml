<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"

    android:layout_weight="1"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:background="@color/Appcolor"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="Please fill the details" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ECECEC"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/ss">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:id="@+id/fullname_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:hint="Enter full name"
                    android:inputType="text"
                    android:id="@+id/fullname_edittext"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon"
                    android:layout_weight="0.15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:id="@+id/emailid_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:inputType="textEmailAddress"
                    android:hint="Enter Email Id"
                    android:id="@+id/emailid_edittext"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon"
                    android:layout_weight="0.15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:id="@+id/mobileno_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:hint="Enter Mobile Number"
                    android:id="@+id/mobileno_edittext"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon"
                    android:layout_weight="0.15" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECECEC"
                android:id="@+id/shippingdate_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:inputType="date"
                    android:hint="Enter Shipping Date"
                    android:id="@+id/shippingdate_edittext"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon"
                    android:layout_weight="0.15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:layout_gravity="center"
                android:id="@+id/funcinalty_layout"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cancle_btn"
                    android:layout_width="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_height="match_parent"
                    android:text="Cancel "
                    android:layout_margin="5dp"
                    style="@style/submitbuttonstyle"
                    android:gravity="center"
                    android:background="@drawable/round_mainbutton"
                    android:layout_weight="0.50"/>

                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:paddingLeft="5dp"
                    android:ellipsize="end"
                    android:paddingRight="5dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:editable="true"
                    style="@style/submitbuttonstyle"
                    android:gravity="center"
                    android:background="@drawable/round_mainbutton"
                    android:layout_weight="0.50"/>





            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>