<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_sub"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:singleLine="false"
        android:textSize="12dp"
        android:gravity="right"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:text="Remove fdsfsdfdsfds  fasdfdsfdsfsdf"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdg sgdsgdsgdsgsg gsdgsdg fsdfdsf"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/title_sub"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/title_sub"
        android:layout_alignEnd="@+id/title_sub" />
</RelativeLayout>