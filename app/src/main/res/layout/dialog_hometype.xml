<?xml version="1.0" encoding="utf-8"?>
<com.trukker.trukkershipperuae.Bubble_layout.BubbleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:id="@+id/main_lauout"
    app:bl_arrowDirection="top"
    app:bl_arrowHeight="15dp"
    app:bl_arrowPosition="50dp"
    app:bl_arrowWidth="20dp"
    app:bl_bubbleColor="#EAEBEC"
    app:bl_cornersRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:text="Select Home Size"
        android:background="@color/Appcolor"
        android:visibility="gone"
        android:textColor="@color/white"
        android:id="@+id/title"
        android:layout_weight="1" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/white"
        android:dividerHeight="0.7dp"
        android:layout_weight="1" />


</LinearLayout>
</com.trukker.trukkershipperuae.Bubble_layout.BubbleLayout>