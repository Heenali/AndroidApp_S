<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/Appcolor"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="Move My Home" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ss">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:background="#EBEBEB"
            android:id="@+id/form_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EBEBEB"
                android:id="@+id/bname_layout"
                android:paddingTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:id="@+id/billing_title"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/billingname_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:hint=""
                    android:id="@+id/billingname_edittext"
                    android:layout_weight="0.15" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EBEBEB"
                android:id="@+id/badd_layout"
                android:paddingTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing Address"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:id="@+id/billlingadd_title"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mess_layout"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">




                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:hint=""
                    android:gravity="start"
                    android:lines="5"
                    android:id="@+id/billingadress_edittext"
                    android:layout_weight="0.15" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:paddingTop="10dp"
                android:layout_weight="0.10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moveto_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="Moving From Address"
                    android:layout_weight=".50"/>


                <TextView
                    android:id="@+id/movingto_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="Moving To Address"
                    android:layout_weight=".50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.10"
                android:background="#EBEBEB"
                android:id="@+id/addselectionmain_layout"
                android:gravity="center"
                android:padding="5dp"

                android:orientation="horizontal">

                <ToggleButton

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/icon_sourceadd"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/check_selector"
                    android:checked="false"
                    />



                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Same as source Address"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10dp"
                    android:gravity="left"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:paddingRight="2dp"
                    android:id="@+id/online_title1"
                    android:layout_weight="0.50"/>



                <ToggleButton

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/icon_destadd"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/check_selector"
                    android:checked="false"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Same as Destination Address"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10dp"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/online_titledgfhgf"
                    android:layout_weight="0.50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.10"
                android:background="#EBEBEB"
                android:id="@+id/movingadd_layout"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/movingfromadd_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:hint=""
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:lines="5"
                    android:layout_weight=".50"/>



                <EditText
                    android:id="@+id/movingtoadd_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="9dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_edittext"
                    android:textSize="15dp"
                    android:hint=""
                    android:gravity="start"
                    android:lines="5"
                    android:layout_weight="0.50"/>


            </LinearLayout>

        </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:id="@+id/cashdelievery_layout"
                 android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/cashdelivery_sucess"
                    android:background="@drawable/check_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash on Delievery"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="45dp"
                    android:id="@+id/cash_title"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_bg"
                android:id="@+id/online_layout"

                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/onlinedelivery_sucess"
                    android:background="@drawable/check_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Payment (Credit  or Debit card)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="45dp"
                    android:id="@+id/online_title"
                    android:layout_toRightOf="@+id/hometype_icon"
                    android:layout_toEndOf="@+id/hometype_icon" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>