<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="left|center"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.9dp"

                android:background="@color/light_blue"
                android:id="@+id/line" />
            <LinearLayout
                android:id="@+id/layout1"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".40"
                    android:gravity="left|center"
                    android:background="@color/white"
                    android:orientation="horizontal" >


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:background="@drawable/order_bar_bule"
                        android:id="@+id/counter_icon"
                        android:layout_alignParentTop="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:singleLine="true"
                        android:textSize="10dp"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:id="@+id/counter_name"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/counter_icon"
                        android:layout_toEndOf="@+id/counter_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/counter_txt"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/counter_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/truck_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:gravity="center|center"

                    android:background="@color/white"
                    android:orientation="horizontal" >



                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/order_truck"
                        android:id="@+id/truck_icon" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/upcoming_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:gravity="left|center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_height="match_parent"
                        android:text="Upcoming"
                        android:textSize="10dp"
                        style="@style/submitbuttonstyle"
                        android:gravity="center"
                        android:background="@drawable/round_mainbutton_black"
                        android:layout_weight="0.50"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout1s"
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/layout2cvf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:gravity="center|center"
                    android:background="@color/white"
                    android:orientation="horizontal" >




                </LinearLayout>
                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="center|center"
                    android:background="@drawable/round_leftside"
                    android:id="@+id/detail_layout">

                    <com.meg7.widget.CircleImageView
                        android:id="@+id/driver_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_profile" />

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pawan Deshpande"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:paddingTop="10dp"

                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:layout_alignTop="@+id/driver_pic"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/driver_pic"
                        android:layout_toEndOf="@+id/driver_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="10dp"
                        android:id="@+id/description_txt"
                        android:layout_alignLeft="@+id/title_text"
                        android:layout_alignStart="@+id/title_text"
                        android:layout_below="@+id/title_text" />


                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/call_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".30"
                    android:gravity="center|center"
                    android:background="#E4E4E4"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rightarrow"
                        android:id="@+id/arrow_icon" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/order_call"
                        android:id="@+id/call_icon" />


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/action_btn_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/layout_employee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:gravity="left|center"
                    android:orientation="horizontal" >




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/helper_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:gravity="left|center"
                    android:orientation="horizontal" >



                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_builder"
                        android:id="@+id/helper_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/helper_text" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/installer_layoutt12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:gravity="left|center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_hammer"
                        android:id="@+id/installer_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/installer_text" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
