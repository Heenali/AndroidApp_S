<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>
    <style name="Theme" parent="android:style/Theme" />

    <style name="Theme.MyAppTheme" parent="Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/flash_screen</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="submitbuttonstyle">

        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="MainButtonTextstyle">
        <item name="android:textColor">#FFFEFC</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyEditTextstyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#C5C5C5</item>

        <item name="android:textSize">14sp</item>
        //many more per requirement
    </style>

    <style name="MymainButtonstyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/Appcolor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!--buttons color-->
        <item name="colorAccent">@color/Appcolor</item>
        <item name="android:windowNoTitle">true</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/grey</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/alert_style</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_orange_dark</item>
    </style>

    <style name="Tooltip2">
        <item name="android:text">qwqwrqwfqwfqwfqwfqwf</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/lightblue</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>